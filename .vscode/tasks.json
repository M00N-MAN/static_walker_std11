{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": [
                "-j",
                "4"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
        },
        {
            "label": "Make clean",
            "type": "shell",
            "command": "mingw32-make.exe",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "clang++ current file",
            "command": "g++",
            "args": [
                "-Wall -g ${filename}.cpp -o ${fileDirname}\\${fileBasenameNoExtension}.exe"
            ]
        },
        {
            "label": "start gdbserver_",
            "type": "shell",
            "command": "/c/WORK/CodeBlocks/MinGW/gdb32/bin/gdbserver32.exe",
            "args": [
                "localhost:9093",
                "bin/StaticWalker.exe"
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "__________"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Listening on port$",
                    "endsPattern": "^$"
                }
            }
        },
        {
            "label": "start gdbserver",
            "dependsOn": [
                "Make",
                "start gdbserver_"
            ]
        }
    ]
}